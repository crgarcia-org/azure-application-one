@{
    ViewData["Title"] = "Home Page";
}

@model string[]

<div class="text-center">
    <h1 class="display-4">Files</h1>

    <ul>
        @foreach (string file in Model)
        {
            <li>@file</li>
        }
    </ul>
</div>
<div class="text-center">
    <input type="button"
        value="Create Files"
           onclick="location.href='@Url.Action("CreateFiles", "Home")'" />
    <input type="button"
        value="Delete Files"
           onclick="location.href='@Url.Action("DeleteFiles", "Home" )'" />
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>